<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/inventory_system?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">comauguste</property>
    <property name="hibernate.connection.password">Journey1</property>
    <property name="hibernate.show_sql">true</property>
    <property name="hibernate.query.factory_class">org.hibernate.hql.internal.classic.ClassicQueryTranslatorFactory</property>
    <mapping resource="com/capstone/ics/model/Site.hbm.xml"/>
    <mapping resource="com/capstone/ics/model/Users.hbm.xml"/>
    <mapping resource="com/capstone/ics/model/InventoryItems.hbm.xml"/>
    <mapping resource="com/capstone/ics/model/Credentials.hbm.xml"/>
    <mapping resource="com/capstone/ics/model/UserAddresses.hbm.xml"/>
    <mapping resource="com/capstone/ics/model/JobTitles.hbm.xml"/>
    <mapping resource="com/capstone/ics/model/RefItemCategories.hbm.xml"/>
    <mapping resource="com/capstone/ics/model/UserAssignedToSite.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
